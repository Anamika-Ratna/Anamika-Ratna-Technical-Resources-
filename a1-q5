import java.util.*;
public class Main{
  
  public static void main(String[] args) {
    // write your code here  
    System.out.println("enter the no.");
    Scanner scn;
    scn=new Scanner(System.in);
    int a=scn.nextInt();
    int d=0;
    int r;
    int b=a;

    while (a!=0)
    {a=a/10;
     d++;
    }
    System.out.println("no of digits are :"+d);
    System.out.print("digits are:");
    for (; b>0; b=b/10)
    {
      r=b%10;
      System.out.print(r+", ");
    }
   
   }
  }
